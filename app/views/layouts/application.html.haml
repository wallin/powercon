!!! 5
%html
  %head
    %title PowerCon
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #wrapper
      %header.inner
        - if current_user
          %span.sccount-info
            Logged in as:
            %em= current_user.name
            = link_to "Sign Out", signout_path, :class => 'facebook-logout button'
      %section.inner
        = yield
